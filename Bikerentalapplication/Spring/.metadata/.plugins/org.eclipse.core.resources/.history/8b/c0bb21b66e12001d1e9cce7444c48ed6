import java.util.Scanner;

public class MyClass {

	public static void main(String[] args) {
		student s;
		Scanner scan=new Scanner(System.in);
		int no=scan.nextInt();
		student arr[]=new student[no];
		for(int i=0;i<no;i++) {
		    String name=scan.next();
			int tam=scan.nextInt();
			int eng=scan.nextInt();
			arr[i]=new student(tam,eng,name);
		}
		total t=new total();
		t.getTotal(arr);
		for(student a:arr) {
			System.out.println(a.getTotal());
		}
		ranking r=new ranking();
		arr=r.calrank(arr);
		for(student a:arr) {
			System.out.println(a.getName());
		}
	}
}
class ranking{
	public student[] calrank(student[] arr) {
		for(int i=0;i<arr.length;i++) {
			for(int j=0;j<arr.length;j++) {
			if(arr[i].getTotal()<arr[j].getTotal()) {
				student n=arr[i];
				arr[i]=arr[j];
				arr[j]=n;
			}
			}
		}		
		return arr;
	}
    	
}
class total{
		student s=new student();
		public void getTotal(student[] arr) {
			for(int i=0;i<arr.length;i++) {
				int mark=arr[i].getEng()+arr[i].getTam();
				arr[i].setTotal(mark);
			}
	}
}

class student{
    private String name;
	private int tam;
	private int eng;
	private int total;
	public int getTam() {
		return tam;
	}
	public void setTam(int tam) {
		this.tam = tam;
	}
	public int getEng() {
		return eng;
	}
	public void setEng(int eng) {
		this.eng = eng;
	}
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	
	public int getTotal() {
		return total;
	}
	public void setTotal(int total) {
		this.total = total;
	}
	public student(int tam, int eng,String name) {
		super();
		this.name=name;
		this.tam = tam;
		this.eng = eng;
	}
	
	public student() {
		
	}
}
